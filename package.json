{
  "name": "vscode-powerquery",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:powerquery"
  ],
  "publisher": "powerquery",
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Power Query configuration",
      "properties": {
        "powerquery.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "languages": [
      {
        "id": "powerquery",
        "aliases": [
          "Power Query Formula Language",
          "Power Query/M",
          "Power Query",
          "powerquery",
          "pq",
          "M"
        ],
        "extensions": [
          ".pq",
          ".pqm",
          ".m",
          ".mout"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "powerquery",
        "scopeName": "source.powerquery",
        "path": "./syntaxes/powerquery.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
    "compile:format": "tsc -p ./packages/format/tsconfig.json",
    "compile:library": "tsc -p ./packages/library/tsconfig.json",
    "compile": "npm run compile:format && npm run compile:library && tsc -b",
    "watch": "tsc -b -watch",
    "test:packages": "npm run test:format && npm run test:library",
    "test:format": "cd packages && cd format && npm test",
    "test:library": "cd packages && cd library && npm test",
    "test": "node ./scripts/e2e.js",
    "postinstall:packages": "cd packages && cd format && npm install && cd .. && cd library && npm install && cd .. && cd ..",
    "postinstall:vscode": "cd client && npm install && cd ../server && npm install && cd ..",
    "postinstall": "npm run postinstall:packages && npm run postinstall:vscode"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/vscode-powerquery.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.0.0",
    "typescript": "^3.4.5",
    "tslint": "^5.16.0",
    "vscode": "^1.1.34"
  },
  "dependencies": {
    "powerquery-format": "./packages/format",
    "powerquery-library": "./packages/library",
    "@microsoft/powerquery-parser": "latest"
  }
}
