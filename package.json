{
  "name": "vscode-powerquery",
  "version": "0.0.8",
  "engines": {
    "vscode": "^1.36.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:powerquery"
  ],
  "publisher": "powerquery",
  "main": "./client/dist/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Power Query configuration",
      "properties": {
        "powerquery.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "languages": [
      {
        "id": "powerquery",
        "aliases": [
          "Power Query Formula Language",
          "Power Query/M",
          "Power Query",
          "powerquery",
          "pq",
          "M"
        ],
        "extensions": [
          ".pq",
          ".pqm",
          ".m",
          ".mout"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "powerquery",
        "scopeName": "source.powerquery",
        "path": "./syntaxes/powerquery.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run build:packages && npm run webpack-prod",
    "client:webpack-prod": "cd client && webpack --mode production",
    "client:webpack": "cd client && webpack --mode development",
    "client:webpack-dev": "cd client && webpack --mode development --watch",
    "server:webpack-prod": "cd server && webpack --mode production",
    "server:webpack": "cd server && webpack --mode development",
    "server:webpack-dev": "cd server && webpack --mode development --watch",
    "build:packages": "npm run build:language-services && npm run build:format && npm run build:library",
    "build:language-services": "tsc -p ./packages/language-services/tsconfig.json",
    "build:format": "tsc -p ./packages/format/tsconfig.json",
    "build:library": "tsc -p ./packages/library/tsconfig.json",
    "build:client": "tsc -p ./client/tsconfig.json",
    "build": "npm run build:packages && tsc -b",
    "watch": "tsc -b -watch",
    "webpack-prod": "npm run server:webpack-prod && npm run client:webpack-prod",
    "test:packages": "npm run test:language-services && npm run test:format && npm run test:library",
    "test:language-services": "cd packages && cd language-services && npm test",
    "test:format": "cd packages && cd format && npm test",
    "test:library": "cd packages && cd library && npm test",
    "test": "node ./scripts/e2e.js",
    "postinstall:packages": "cd packages && cd language-services && npm install && cd ../format && npm install && cd ../library && npm install && cd ../..",
    "postinstall:vscode": "cd client && npm install && cd ../server && npm install && cd ..",
    "postinstall": "npm run postinstall:packages && npm run postinstall:vscode"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microsoft/vscode-powerquery.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.2",
    "lerna": "^3.19.0",
    "ts-loader": "^6.2.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.6.4",
    "vscode": "^1.1.36",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  }
}
