{
  "name": "vscode-powerquery",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:powerquery"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "powerquery",
        "aliases": [
          "Power Query",
          "powerquery",
          "M"
        ],
        "extensions": [
          ".pq",
          ".pqm",
          ".m",
          ".mout"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "powerquery",
        "scopeName": "source.powerquery",
        "path": "./syntaxes/powerquery.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.1.4",
    "vscode": "^1.1.25",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42",
    "powerquery-parser": "^0.0.10"
  },
  "dependencies": {
    "powerquery-fmt": "^0.0.3"
  }
}
