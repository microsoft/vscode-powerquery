{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "webpack-dev",
            "path": "server/",
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "base": "$ts-webpack-watch",
                    "fileLocation": ["relative", "${workspaceFolder}/server/"]
                },
                {
                    "base": "$tslint-webpack-watch",
                    "fileLocation": ["relative", "${workspaceFolder}/server/"]
                }
            ],
            "label": "Webpack Server"
        },
        {
            "type": "npm",
            "script": "webpack-dev",
            "path": "client/",
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "base": "$ts-webpack-watch",
                    "fileLocation": ["relative", "${workspaceFolder}/client/"]
                },
                {
                    "base": "$tslint-webpack-watch",
                    "fileLocation": ["relative", "${workspaceFolder}/client/"]
                }
            ],
            "label": "Webpack Client"
        },
        {
            "type": "npm",
            "script": "watch",
            "path": "client/",
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "base": "$tsc-watch",
                    "fileLocation": ["relative", "${workspaceFolder}/client/"]
                }
            ],
            "label": "Build UI Tests"
        },
        {
            "label": "Run Watchers",
            "dependsOn": ["Webpack Server", "Webpack Client", "Build UI Tests"]
        }
    ]
}
