{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "lib",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "rootDir": "src",
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
    ],
}
