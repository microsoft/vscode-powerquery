{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--debug",
        "--colors",
        "--timeout",
        "999999",
        "-g",
        "abc123",
        "-r",
        "ts-node/register",
        "${workspaceFolder}/src/test/**/*.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ],
  "compounds": []
}
