{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "lib": ["ES2020"],
        "sourceMap": true,
        "outDir": "lib",
        "strict": true,
        "downlevelIteration": true,
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "rootDir": "src",
        "incremental": true,
        "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
