{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "out",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "rootDir": "src",
        "incremental": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
